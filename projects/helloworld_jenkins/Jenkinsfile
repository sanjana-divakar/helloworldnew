pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'helloworld-app'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git(url: 'https://github.com/sanjana-divakar/helloworldnew.git', branch: 'main')
            }
        }

        stage('Static Code Analysis') {
            steps {
                script {
                    def appPath = 'projects/helloworld_jenkins'
                    bat "cd ${appPath} && npm install eslint --save-dev"
                    bat "cd ${appPath} && npx eslint *.js || exit 0"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def appPath = 'projects/helloworld_jenkins'
                    bat "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ${appPath}"
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    bat '''
                        docker stop helloworld-container || exit 0
                        docker rm helloworld-container || exit 0
                    '''
                    def portInUse = bat(script: 'netstat -an | findstr 8090', returnStdout: true).trim()
                    if (portInUse) {
                        echo 'Port 8090 is already in use, using fallback port 8091.'
                        bat "docker run -d -p 8091:80 --name helloworld-container ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    } else {
                        bat "docker run -d -p 8090:80 --name helloworld-container ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    bat 'docker ps -f name=helloworld-container -q | findstr . && docker container stop helloworld-container || exit 0'
                    bat 'docker container ls -a -f name=helloworld-container -q | findstr . && docker container rm helloworld-container || exit 0'
                    def portInUse = bat(script: 'netstat -an | findstr ":80 "', returnStdout: true).trim()
                    if (portInUse) {
                        echo 'Port 80 is already in use, using fallback port 8081.'
                        bat "docker run -d -p 8081:80 --name helloworld-container ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    } else {
                        bat "docker run -d -p 80:80 --name helloworld-container ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
